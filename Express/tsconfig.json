{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "publics/*"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "node_modules"
  ]
}